<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="dita-ot/plugin.rnc" type="application/relax-ng-compact-syntax"?>
<plugin id="fox.jason.prismjs" version="2.0.0">
  
	<!-- HTML5 extension points -->   
	<feature extension="dita.xsl.html5" value="xsl/xhtml.xsl" type="file"/>

	<!-- XHTML extension points -->
	<feature extension="dita.xsl.xhtml" value="xsl/xhtml.xsl" type="file"/>

	<!-- PDF -->
	<feature extension="dita.xsl.xslfo" value="xsl/xslfo.xsl" type="file"/>
	<!--
		This plugin requires the XMLTask lib
	-->
	<require plugin="org.doctales.xmltask"/>

	<extension-point id="fox.jason.prismjs.pre" name="Extend prismjs pre-processing"/>
	<feature extension="depend.preprocess.post" value="prismjs"/>
	<feature extension="ant.import" file="process_prismjs.xml"/>

	  <!-- Add a template file to enable overrides to use extension points -->
  <template file="process_prismjs_template.xml"/>
</plugin>
